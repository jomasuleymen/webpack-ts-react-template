{
	"compilerOptions": {
		"experimentalDecorators": true,
		"outDir": "build/dist",
		"module": "ESNext",
		"target": "ES5",
		"lib": ["dom", "dom.iterable", "esnext", "esnext.asynciterable", "ES5"],
		"sourceMap": true,
		"allowJs": true,
		"jsx": "react-jsx",
		"moduleResolution": "node",
		"rootDir": "src",
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"removeComments": true,
		"noFallthroughCasesInSwitch": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"esModuleInterop": true,
		"baseUrl": "src",
		"paths": {
			"@store/*": ["store/*"],
			"@styles/*": ["styles/*"],
			"@pages/*": ["pages/*"],
			"@components/*": ["components/*"]
		}
	},
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	},
	"include": ["src"]
}
